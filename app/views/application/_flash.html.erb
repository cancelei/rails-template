<%# locals: () %>

<div class="fixed top-4 right-4 z-50 max-w-md space-y-2">
  <%# Success Notice %>
  <% if flash[:notice].present? %>
    <div class="alert alert-success"
         data-controller="notification"
         data-notification-duration="5000"
         role="status"
         aria-live="polite">
      <div class="flex items-center justify-between gap-4">
        <div class="flex-1">
          <%= flash[:notice] %>
        </div>
        <button class="btn-ghost btn-sm flex-shrink-0"
                data-action="notification#dismiss"
                aria-label="Close notification"
                type="button">
          ✕
        </button>
      </div>
    </div>
  <% end %>

  <%# Error Alert %>
  <% if flash[:alert].present? %>
    <div class="alert alert-danger"
         data-controller="notification"
         data-notification-duration="7000"
         role="alert"
         aria-live="assertive">
      <div class="flex items-center justify-between gap-4">
        <div class="flex-1">
          <%= flash[:alert] %>
        </div>
        <button class="btn-ghost btn-sm flex-shrink-0"
                data-action="notification#dismiss"
                aria-label="Close notification"
                type="button">
          ✕
        </button>
      </div>
    </div>
  <% end %>

  <%# Warnings %>
  <% if flash[:warning].present? %>
    <div class="alert alert-warning"
         data-controller="notification"
         data-notification-duration="6000"
         role="status"
         aria-live="polite">
      <div class="flex items-center justify-between gap-4">
        <div class="flex-1">
          <%= flash[:warning] %>
        </div>
        <button class="btn-ghost btn-sm flex-shrink-0"
                data-action="notification#dismiss"
                aria-label="Close notification"
                type="button">
          ✕
        </button>
      </div>
    </div>
  <% end %>
</div>
