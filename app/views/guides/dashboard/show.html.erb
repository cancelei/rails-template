<% provide(:title, "My Guide Dashboard") %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-foreground">My Guide Dashboard</h1>
          <p class="mt-2 text-muted-foreground">Manage your profile, tours, and bookings</p>
        </div>
        <%= link_to guides_bookings_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          Manage Bookings
        <% end %>
      </div>
    </div>

    <!-- Notification area for Turbo Stream updates -->
    <div id="notifications" class="fixed top-4 right-4 z-50 space-y-2"></div>

    <!-- Guide Profile Section with Inline Editing -->
    <%= turbo_frame_tag "guide_profile" do %>
      <%= render "shared/guide_profile_display", guide_profile: @guide_profile, context: :guide %>
    <% end %>

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="card">
        <div class="card-body">
          <h3 class="text-sm font-medium text-muted-foreground">Total Tours</h3>
          <p class="text-3xl font-bold text-foreground mt-2"><%= @tours.count %></p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h3 class="text-sm font-medium text-muted-foreground">Upcoming Tours</h3>
          <p class="text-3xl font-bold text-foreground mt-2"><%= @upcoming_tours.count %></p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h3 class="text-sm font-medium text-muted-foreground">Total Bookings</h3>
          <p class="text-3xl font-bold text-foreground mt-2"><%= @tours.joins(:bookings).count %></p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h3 class="text-sm font-medium text-muted-foreground">Reviews</h3>
          <p class="text-3xl font-bold text-foreground mt-2"><%= @reviews.count %></p>
        </div>
      </div>
    </div>

    <!-- Upcoming Tours -->
    <%= turbo_stream_from "guide_#{current_user.id}_tours" %>
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold text-foreground">Upcoming Tours</h2>
        <%= link_to "Create New Tour", new_tour_path, class: "btn-booking" %>
      </div>
      <% if @upcoming_tours.any? %>
        <div class="space-y-4" id="guide_tours_list">
          <% @upcoming_tours.each do |tour| %>
            <%= turbo_frame_tag dom_id(tour) do %>
              <%= render "guides/dashboard/tour_card", tour: %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state-card">
          <h3 class="empty-state-title">No upcoming tours</h3>
          <p class="empty-state-description">Create your first tour to start receiving bookings</p>
          <%= link_to "Create Tour", new_tour_path, class: "btn-booking mt-4" %>
        </div>
      <% end %>
    </div>

    <!-- Past Tours -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-foreground mb-4">Past Tours</h2>
      <% if @past_tours.any? %>
        <div class="space-y-4">
          <% @past_tours.limit(5).each do |tour| %>
            <div class="card opacity-75">
              <div class="card-body">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg font-semibold text-foreground"><%= tour.title %></h3>
                    <p class="text-sm text-muted-foreground mt-1"><%= tour.starts_at.strftime("%B %d, %Y") %></p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm text-muted-foreground">Bookings</p>
                    <p class="text-2xl font-bold text-foreground"><%= tour.bookings.count %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state-card">
          <h3 class="empty-state-title">No past tours</h3>
        </div>
      <% end %>
    </div>

    <!-- Recent Reviews -->
    <div>
      <h2 class="text-2xl font-bold text-foreground mb-4">Recent Reviews</h2>
      <% if @reviews.any? %>
        <div class="space-y-4">
          <% @reviews.limit(5).each do |comment| %>
            <div class="card">
              <div class="card-body">
                <div class="flex items-start justify-between">
                  <div>
                    <p class="text-foreground"><%= comment.content %></p>
                    <p class="text-sm text-muted-foreground mt-2">
                      by <%= comment.user.name %> â€¢ <%= time_ago_in_words(comment.created_at) %> ago
                    </p>
                  </div>
                  <div class="flex items-center text-muted-foreground">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
                    </svg>
                    <span class="ml-1"><%= comment.likes_count %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state-card">
          <h3 class="empty-state-title">No reviews yet</h3>
          <p class="empty-state-description">Reviews from tourists will appear here</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
