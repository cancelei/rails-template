<%# locals: (columns:) %>
<!-- Responsive admin table wrapper component
     Usage: Pass columns array and provide table rows in a block
-->

<div class="bg-card shadow rounded-lg border border-border overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full divide-y divide-border min-w-max sm:min-w-full">
      <thead class="bg-muted">
        <tr>
          <% columns.each do |column| %>
            <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider whitespace-nowrap">
              <%= column %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-card divide-y divide-border">
        <%= yield %>
      </tbody>
    </table>
  </div>
</div>
