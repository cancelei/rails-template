<%# locals: (f:) %>
<div class="form-group">
  <%= f.label :name, class: "form-label form-label-required" %>
  <%= f.text_field :name,
                   autofocus: true,
                   autocomplete: "name",
                   class: "form-input",
                   placeholder: "Your full name",
                   required: true,
                   value: f.object.name %>
</div>
