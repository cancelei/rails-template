<%#
  Tour Details Edit Form Partial
  Used for inline editing in public tour show page
-%>

<% tour ||= @tour %>

<%= turbo_frame_tag dom_id(tour) do %>
<div class="card">
  <div class="card-body">
    <h2 class="text-xl font-semibold mb-4">Edit Tour Details</h2>

    <%= form_with(model: tour, data: { turbo_frame: "_top" }) do |f| %>
      <div class="space-y-4">
        <% if tour.errors.any? %>
          <div class="alert alert-error">
            <h3 class="font-semibold">Please fix the following errors:</h3>
            <ul class="list-disc list-inside">
              <% tour.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-input", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, rows: 4, class: "form-input", required: true %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="form-group">
            <%= f.label :starts_at, "Start Date & Time", class: "form-label" %>
            <%= f.datetime_local_field :starts_at, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :ends_at, "End Date & Time", class: "form-label" %>
            <%= f.datetime_local_field :ends_at, class: "form-input", required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :location_name, "Location", class: "form-label" %>
          <%= f.text_field :location_name, class: "form-input", required: true %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="form-group">
            <%= f.label :latitude, class: "form-label" %>
            <%= f.number_field :latitude, step: :any, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :longitude, class: "form-label" %>
            <%= f.number_field :longitude, step: :any, class: "form-input", required: true %>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-4">
          <div class="form-group">
            <%= f.label :capacity, "Capacity (people)", class: "form-label" %>
            <%= f.number_field :capacity, min: 1, class: "form-input", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :price_cents, "Price (cents)", class: "form-label" %>
            <%= f.number_field :price_cents, min: 0, class: "form-input" %>
            <p class="form-help">Leave empty for free tours</p>
          </div>

          <div class="form-group">
            <%= f.label :currency, class: "form-label" %>
            <%= f.select :currency,
                options_for_select(['USD', 'EUR', 'GBP', 'JPY', 'AUD', 'CAD'], tour.currency),
                {},
                class: "form-input" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :tour_type, class: "form-label" %>
          <%= f.select :tour_type,
              options_for_select([['Public Tour', 'public_tour'], ['Private Tour', 'private_tour']], tour.tour_type),
              {},
              class: "form-input" %>
          <p class="form-help">Private tours require all spots to be booked at once</p>
        </div>

        <div class="form-group">
          <%= f.label :booking_deadline_hours, "Booking Deadline (hours before start)", class: "form-label" %>
          <%= f.number_field :booking_deadline_hours, min: 0, class: "form-input" %>
          <p class="form-help">Leave empty for no deadline</p>
        </div>

        <div class="form-actions flex gap-2">
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
          <%= link_to "Cancel",
              tour_path(tour),
              data: { turbo_frame: dom_id(tour) },
              class: "btn btn-ghost" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
