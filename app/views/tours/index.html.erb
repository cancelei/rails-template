<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-foreground">Tours</h1>
      <p class="text-muted-foreground mt-1">Explore amazing tours and book your next adventure</p>
    </div>
    <% if user_signed_in? && current_user.guide? %>
      <%= link_to "Create New Tour", new_tour_path, class: "btn-booking" %>
    <% end %>
  </div>

  <!-- Search and Filter Section -->
  <div class="mb-8">
    <%= form_with url: tours_path, method: :get, local: true,
                  data: { controller: "search_filter" },
                  class: "space-y-4" do |f| %>
      <div class="bg-card rounded-lg shadow-md border border-border p-6">
        <!-- Search Input -->
        <div class="mb-6">
          <%= f.label :q, "Search Tours", class: "form-label" %>
          <div class="relative">
            <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <%= f.search_field :q, placeholder: "Search by title, location, or guide...",
                                   class: "form-input pl-10 w-full",
                                   data: { search_filter_target: "input" },
                                   value: params[:q] %>
          </div>
        </div>

        <!-- Filter Section (Collapsible on Mobile) -->
        <div class="border-t border-border pt-6">
          <details class="group" open>
            <summary class="flex items-center cursor-pointer text-sm font-semibold text-foreground hover:text-primary transition-colors">
              <span class="flex-1">Filters</span>
              <span class="group-open:rotate-180 transition-transform">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
              </span>
            </summary>

            <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6"
                 data-search_filter_target="filters">
              <!-- Location Filter -->
              <div>
                <%= f.label :location, "Location", class: "block text-sm font-medium text-foreground mb-3" %>
                <div class="space-y-2">
                  <%= f.text_field :location, placeholder: "e.g., Paris, Tokyo...",
                                              class: "form-input w-full",
                                              value: params[:location] %>
                </div>
              </div>

              <!-- Price Range Filter -->
              <div>
                <%= f.label :max_price, "Max Price", class: "block text-sm font-medium text-foreground mb-3" %>
                <div class="space-y-2">
                  <%= f.select :max_price,
                               options_for_select(
                                 [
                                   ["Any", ""],
                                   ["Under $50", "50"],
                                   ["Under $100", "100"],
                                   ["Under $500", "500"],
                                   ["Any Price", "10000"]
                                 ],
                                 params[:max_price]
                               ),
                               { include_blank: true },
                               class: "form-select w-full" %>
                </div>
              </div>

              <!-- Availability Filter -->
              <div>
                <label class="block text-sm font-medium text-foreground mb-3">Availability</label>
                <div class="space-y-2">
                  <label class="flex items-center">
                    <%= f.check_box :availability, { class: "form-checkbox" }, "available", "all" %>
                    <span class="ml-2 text-sm text-foreground">Available Only</span>
                  </label>
                </div>
              </div>
            </div>

            <!-- Filter Actions -->
            <div class="mt-6 flex items-center gap-3 pt-4 border-t border-border">
              <%= f.submit "Apply Filters", class: "btn-booking btn-sm" %>
              <button type="button"
                  data-action="search_filter#clear"
                  class="btn-ghost btn-sm">
                Clear All
              </button>
            </div>
          </details>
        </div>
      </div>
    <% end %>
  </div>

  <% if @tours.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tours.each do |tour| %>
        <div class="tour-card">
          <% if tour.cover_image.attached? %>
            <div class="tour-card-image">
              <%= image_tag tour.cover_image.variant(resize_to_limit: [400, 300]),
                            alt: "#{tour.title} tour in #{tour.location_name}",
                            class: "w-full h-48 object-cover" %>
              <div class="tour-card-badge">
                <% if tour.available_spots > 10 %>
                  <span class="status-badge status-available">Available</span>
                <% elsif tour.available_spots > 0 %>
                  <span class="status-badge status-limited">Limited Spots</span>
                <% else %>
                  <span class="status-badge status-sold-out">Sold Out</span>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="tour-card-content">
            <h2 class="tour-card-title"><%= tour.title %></h2>
            <p class="tour-card-description">
              <% if tour.guide&.guide_profile %>
                Guide: <%= tour.guide.guide_profile.bio.presence || tour.guide.name %>
              <% end %>
            </p>
            <p class="tour-card-description"><%= tour.description %></p>
            <div class="tour-card-meta">
              <div class="space-y-1 text-sm text-muted-foreground">
                <div class="flex items-center">
                  <span class="font-semibold">Location:</span>
                  <span class="ml-2"><%= tour.location_name %></span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold">Capacity:</span>
                  <span class="ml-2"><%= tour.capacity %> people</span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold">Date:</span>
                  <span class="ml-2"><%= tour.starts_at.strftime("%b %d, %Y") %></span>
                </div>
              </div>
              <div class="tour-card-price">
                <%= number_to_currency((tour.price_cents || 0) / 100.0, unit: tour.currency || "USD") %>
              </div>
            </div>
            <div class="tour-card-actions">
              <%= link_to "View Details", tour_path(tour), class: "btn-booking-secondary btn-sm flex-1 text-center" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state-card">
      <div class="empty-state-icon">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <h3 class="empty-state-title">No tours available at the moment</h3>
      <p class="empty-state-description">Check back later for new tour offerings or create your own if you're a guide.</p>
      <% if user_signed_in? && current_user.guide? %>
        <div class="empty-state-action">
          <%= link_to "Create your first tour", new_tour_path, class: "btn-booking" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
