<%# locals: () %>

<div class="space-y-2 text-muted-foreground">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "block text-blue-600 hover:text-blue-800" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p>Don't have an account?</p>
    <%= link_to "Sign up as a Tourist", new_tourist_registration_path, class: "block text-blue-600 hover:text-blue-800" %>
    <%= link_to "Sign up as a Guide", new_guide_registration_path, class: "block text-blue-600 hover:text-blue-800" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block text-blue-600 hover:text-blue-800" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block text-blue-600 hover:text-blue-800 text-xs" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block text-blue-600 hover:text-blue-800 text-xs" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 transition-colors" %>
    <% end %>
  <% end %>
</div>
