<% provide(:title, "Manage Booking") %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-2xl font-bold text-foreground mb-6">Manage Your Booking</h1>

    <div class="booking-card">
      <div class="booking-card-header">
        <h2 class="booking-card-title">Booking Details</h2>
        <span class="booking-card-status booking-card-status-<%= @booking.status.downcase %>">
          <%= @booking.status.upcase %>
        </span>
      </div>
      <div class="booking-card-details">
        <p><strong>Tour:</strong> <%= @booking.tour.title %></p>
        <p><strong>Date:</strong> <%= @booking.tour.starts_at.strftime("%B %d, %Y") %></p>
        <p><strong>Spots:</strong> <%= @booking.spots %></p>

        <% if @booking.booking_add_ons.any? %>
          <div class="mt-3 pt-3 border-t border-gray-200">
            <p class="text-sm font-semibold text-muted-foreground mb-2">Price Breakdown:</p>
            <p class="text-sm">
              <strong>Tour Price:</strong>
              <%= number_to_currency(@booking.tour_price / 100.0, unit: @booking.tour.currency || "USD") %>
              <span class="text-xs text-muted-foreground">(<%= @booking.spots %> × <%= number_to_currency((@booking.tour.price_cents || 0) / 100.0, unit: @booking.tour.currency || "USD") %>)</span>
            </p>
            <p class="text-sm">
              <strong>Add-ons:</strong>
              <%= number_to_currency(@booking.add_ons_total / 100.0, unit: @booking.tour.currency || "USD") %>
            </p>
            <% @booking.booking_add_ons.each do |booking_add_on| %>
              <p class="text-xs text-muted-foreground ml-4">
                • <%= booking_add_on.tour_add_on.name %>: <%= booking_add_on.formatted_price %>
              </p>
            <% end %>
          </div>
        <% end %>

        <p class="mt-3 pt-3 border-t border-gray-200"><strong>Total Price:</strong>
          <span class="text-orange-600 font-semibold">
            <%= @booking.formatted_total_price %>
          </span>
        </p>
      </div>

      <% if @booking.confirmed? %>
        <div class="booking-card-actions">
          <%= button_to "Cancel Booking",
                        cancel_booking_path(@booking),
                        method: :post,
                        data: { turbo_confirm: "Are you sure you want to cancel this booking? This action cannot be undone." },
                        class: "btn-danger btn-sm" %>
        </div>
      <% end %>
    </div>

    <% if @booking.tour.done? && !@booking.review %>
      <div class="review-form">
        <h2 class="text-xl font-semibold mb-4">Leave a Review</h2>
        <%= form_with model: [@booking, @booking.build_review], url: review_booking_path(@booking), local: true, class: "space-y-4" do |f| %>
          <div class="form-group">
            <%= f.label :rating, "Rating", class: "form-label" %>
            <div class="review-form-rating">
              <% (1..5).each do |i| %>
                <label class="review-form-star">
                  <%= f.radio_button :rating, i, class: "hidden" %>
                  <svg class="w-6 h-6 cursor-pointer transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                  </svg>
                </label>
              <% end %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :comment, "Your Review", class: "form-label" %>
            <%= f.text_area :comment, class: "form-textarea", placeholder: "Share your experience with this tour..." %>
          </div>

          <div class="form-actions">
            <%= f.submit "Submit Review", class: "btn-booking" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
