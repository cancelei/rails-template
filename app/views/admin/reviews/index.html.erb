<% provide(:page_title, "Reviews") %>

<div>
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-foreground">Reviews</h1>
    <p class="mt-1 text-sm text-muted-foreground"><%= @reviews.total_count %> total reviews</p>
  </div>

  <!-- Reviews List -->
  <div class="bg-card shadow rounded-lg border border-border overflow-hidden">
    <ul id="reviews_list" class="divide-y divide-border">
      <% @reviews.each do |review| %>
        <%= turbo_frame_tag dom_id(review) do %>
          <li id="<%= dom_id(review) %>" class="px-6 py-4">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <div class="flex items-center">
                    <% review.rating.times do %>
                      <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                  </div>
                  <span class="ml-2 text-sm text-muted-foreground">by <%= review.user.name %></span>
                </div>
                <p class="text-sm text-gray-700"><%= review.comment %></p>
                <p class="mt-2 text-xs text-muted-foreground">
                  Guide: <%= review.guide_profile.user.name %> â€¢
                  <%= time_ago_in_words(review.created_at) %> ago
                </p>
              </div>
              <div class="ml-4">
                <%= button_to "Delete",
                              admin_review_path(review),
                              method: :delete,
                              form: { data: { turbo_confirm: "Are you sure?" } },
                              class: "text-red-600 hover:text-red-900 text-sm" %>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <!-- Pagination -->
  <div class="mt-6">
    <%== pagy_nav(@pagy) if defined?(@pagy) %>
  </div>
</div>
